{% endblock %}

{% block body %}
	<h1 class="text-center mt-3">RETROUVEZ ICI NOTRE GAMME DE SERVICE</h1>

	<a href="{{ path('app_contact_show') }}" class="button_link">PRENDRE RENDEZ-VOUS EN CLIQUANT ICI</a>

<div class="row service_container">
		<div class="card card_service col-sm-6" style="width: 20rem;">
			<img src="{{ asset('asset/uploads/images/cabine_peinture_mustang_rouge.jpg') }}" class="card-img-top service_card" alt="cabine de peinture automobile avec le nez d'une for mustang rouge">
